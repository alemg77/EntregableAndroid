<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".Vista.DetalleProducto.FragmentItemFirebase">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:layout_margin="10dp"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/Titulo" />

        <ImageView
            android:id="@+id/ImagenItemFirebase"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textoPrecio"
            />

        <TextView
            android:id="@+id/TextoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ImagenItemFirebase"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>