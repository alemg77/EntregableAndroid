<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentDetalleProducto.FragmentDetalleProducto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/FragmentDetalleProductoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="@string/hello_blank_fragment" />

    <ImageView
        android:id="@+id/FragmentDetalleProductoImagen"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/FragmentDetalleProductoTitulo"
        />

        <TextView
            android:id="@+id/FragmentDetalleProductoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="#FF0000"
            app:layout_constraintTop_toBottomOf="@+id/FragmentDetalleProductoImagen"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>